source 'https://rubygems.org'

# I believe this has to be first
gem 'middleman'

# Middleman extensions are next
gem 'middleman-autoprefixer'

# GitHub Pages support and config
gem 'middleman-gh-pages'

# This is disabled for now
# https://github.com/middleman/middleman/issues/2142
# gem 'middleman-livereload'

# Adds meta tags from data/site.yml
gem 'middleman-meta-tags'

# Minifes HTML
gem 'middleman-minify-html'

# Used to fetch the latest tachyons-sass
gem 'middleman-sprockets'

# Dependencies for my custom helpers
gem 'http'
gem 'instagram_api_client'
gem 'svgeez', '~> 2.0'

# Gems from Rails-Assets.org
source 'https://rails-assets.org' do
  gem 'rails-assets-tachyons-sass'
  gem 'rails-assets-timeago.js'
end
