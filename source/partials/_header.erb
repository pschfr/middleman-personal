<header id="top" class="w-100 vh-100 vh-75-ns dt ph3 pv4 f1 lh-title bg-blue lightest-blue chakra-petch">
	<div class="v-mid dtc">
		<h1 class="mv0"><%= data.global.name %></h1>
		<h3 class="mt0 normal"><%= data.global.tagline %></h3>
		<nav class="f4 b">
			<ul class="list pl0">
				<li class="dib mr2"><%= link_to 'About', '#intro', { class: "navy underline-hover ttu" } %></li>
				<li class="dib mr2"><%= link_to 'Work', '#work', { class: "navy underline-hover ttu" } %></li>
				<li class="dib mr2"><%= link_to 'Labs', '#labs', { class: "navy underline-hover ttu" } %></li>
				<li class="dib mr2"><%= link_to 'Contact', '#contact', { class: "navy underline-hover ttu" } %></li>
			</ul>
			<ul class="list pl0">
				<li>
					<i class="material-icons v-btm">email</i>
					<%= link_to data.global.email, 'mailto:' + data.global.email, { class: "navy underline-hover ttu" } %>
				</li>
				<li>
					<i class="material-icons v-btm">message</i>
					<%= link_to '@' + data.global.username, 'https://twitter.com/messages/compose?recipient_id=156735510', { class: "navy underline-hover ttu" } %>
				</li>
			</ul>
		</nav>
	</div>
</header>
